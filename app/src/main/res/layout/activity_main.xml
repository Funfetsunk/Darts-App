<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/tv_score_input"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score Input: "
        android:textSize="30sp"
        android:gravity="center"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tv_points_left"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Points Left: 501"
        android:textSize="36sp" <!-- Larger text for prominence -->
    android:gravity="center"
    android:padding="16dp"
    android:textColor="@color/colorAccent" /> <!-- Highlighted color -->

    <TextView
        android:id="@+id/tv_checkout"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best Checkout: "
        android:textSize="24sp"
        android:gravity="center"
        android:padding="8dp" />

    <GridLayout
        android:layout_width="match_parent"
